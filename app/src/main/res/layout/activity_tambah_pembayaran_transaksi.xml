<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="pembayaranspp.windypermadi.aplikasipembayaranspp.transaksi.TambahPembayaranTransaksi">

    <include layout="@layout/custom_layout_toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:boxStrokeColor="@color/black"
                android:hint="NIS Siswa"
                android:textColorHint="@color/black"
                tools:ignore="HardcodedText">

                <EditText
                    android:id="@+id/et_nis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:focusable="false"
                    android:clickable="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="Autofill,HardcodedText,LabelFor,UnusedAttribute" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:boxStrokeColor="@color/black"
                android:hint="Nama Siswa"
                android:textColorHint="@color/black"
                tools:ignore="HardcodedText">

                <EditText
                    android:id="@+id/et_nama"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:focusable="false"
                    android:clickable="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="Autofill,HardcodedText,LabelFor,UnusedAttribute" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:boxStrokeColor="@color/black"
                android:hint="Kelas"
                android:textColorHint="@color/black"
                tools:ignore="HardcodedText">

                <EditText
                    android:id="@+id/et_kelas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="Autofill,HardcodedText,LabelFor,UnusedAttribute" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:boxStrokeColor="@color/black"
                android:hint="Tahun Ajaran"
                android:textColorHint="@color/black"
                tools:ignore="HardcodedText">

                <EditText
                    android:id="@+id/et_tahun"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="Autofill,HardcodedText,LabelFor,UnusedAttribute" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:boxStrokeColor="@color/black"
                android:hint="Bulan"
                android:textColorHint="@color/black"
                tools:ignore="HardcodedText">

                <EditText
                    android:id="@+id/et_bulan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="Autofill,HardcodedText,LabelFor,UnusedAttribute" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:boxStrokeColor="@color/black"
                android:hint="Total SPP"
                android:textColorHint="@color/black"
                tools:ignore="HardcodedText">

                <EditText
                    android:id="@+id/et_total"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="Autofill,HardcodedText,LabelFor,UnusedAttribute" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Metode Pembayaran"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/fontsize15"/>
            <Spinner
                android:id="@+id/listItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:entries="@array/metode_pembayaran"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:boxStrokeColor="@color/black"
                android:hint="Nama Rekening Pembayar"
                android:textColorHint="@color/black"
                tools:ignore="HardcodedText">

                <EditText
                    android:id="@+id/et_nama_rekening"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="Autofill,HardcodedText,LabelFor,UnusedAttribute" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:boxStrokeColor="@color/black"
                android:hint="Tanggal Bayar"
                android:textColorHint="@color/black"
                tools:ignore="HardcodedText">

                <EditText
                    android:id="@+id/et_tanggal_bayar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    android:inputType="textCapWords"
                    android:focusable="false"
                    android:clickable="true"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="Autofill,HardcodedText,LabelFor,UnusedAttribute" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/text_simpan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_primary"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Bayar"
                android:textColor="@color/white"
                android:textSize="@dimen/fontsize18"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>